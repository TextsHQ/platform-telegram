{
  "name": "@textshq/platform-telegram",
  "version": "0.1.0",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "prepack": "tsc",
    "build": "yarn tsc",
    "lint": "eslint src --ext ts,tsx,js,jsx --cache",
    "rebuild-windows": "yarn tsc && taskkill.exe /IM Texts.exe /F; cmd /c \"start cmd /c \"start /wait %LOCALAPPDATA%/Programs/jack/Texts.exe\"\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "true || yarn lint --fix"
    }
  },
  "dependencies": {
    "@textshq/platform-sdk": "https://github.com/TextsHQ/platform-sdk#main",
    "async-mutex": "^0.3.2",
    "big-integer": "^1.6.51",
    "bluebird": "^3.7.2",
    "date-fns": "^2.28.0",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "react": "https://github.com/TextsHQ/react-global-shim",
    "react-phone-number-input": "^3.1.52",
    "telegram": "^2.9.8",
    "vcard-creator": "^0.4.2"
  },
  "devDependencies": {
    "@textshq/eslint-config": "https://github.com/TextsHQ/eslint-config#main",
    "@types/better-sqlite3": "^7.5.0",
    "@types/bluebird": "^3.5.36",
    "@types/eslint": "^7.2.6",
    "@types/glob": "^7.2.0",
    "@types/lodash": "^4.14.182",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^17.0.31",
    "@types/react": "17.0.2",
    "@types/react-phone-number-input": "^3.0.13",
    "eslint": "^7.21.0",
    "husky": "^4.3.5",
    "typescript": "^4.7.3"
  },
  "packageManager": "yarn@3.2.1"
}
