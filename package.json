    "ref-napi": "^3.0.3"
  },
  "dependencies": {
    "@textshq/platform-sdk": "https://github.com/TextsHQ/platform-sdk#1c200ae33d4adccc1404fb55669b13a70172a1b9",
    "airgram": "^5.0.0",
    "big-integer": "^1.6.51",
    "bluebird": "^3.7.2",
    "date-fns": "^2.27.0",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "react": "https://github.com/TextsHQ/react-global-shim",
    "react-phone-number-input": "^3.1.16",
    "telegram": "^2.5.2",
    "vcard-creator": "^0.4.2"
  },
  "devDependencies": {
    "@textshq/eslint-config": "https://github.com/TextsHQ/eslint-config#main",
    "@types/better-sqlite3": "^7.4.2",
    "@types/bluebird": "^3.5.33",
    "@types/eslint": "^7.2.6",
    "@types/glob": "^7.2.0",
    "@types/lodash": "^4.14.168",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^17.0.12",
    "@types/react": "17.0.2",
    "@types/react-phone-number-input": "^3.0.13",
    "eslint": "^7.21.0",
    "husky": "^4.3.5",
    "source-map-support": "^0.5.21",
    "typescript": "^4.5.2"
  },
  "resolutions": {
    "ffi-napi": "^4.0.3"
  },
  "packageManager": "yarn@3.1.0"
}
